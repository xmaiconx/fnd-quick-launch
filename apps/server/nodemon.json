{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.e2e-spec.ts",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/test/**",
    "dist",
    "node_modules",
    ".git",
    "coverage",
    "*.log",
    "*.md"
  ],
  "exec": "node --require @swc-node/register src/local.ts",
  "delay": 250,
  "legacyWatch": false,
  "verbose": false,
  "restartable": "rs",
  "env": {
    "NODE_ENV": "development"
  }
}
