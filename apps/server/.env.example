# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
# Local development (Docker)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fnd_quicklaunch_dev

# Railway: Use Railway PostgreSQL connection string
# DATABASE_URL=postgresql://postgres:[PASSWORD]@[HOST]:5432/railway

# ===========================================
# JWT AUTHENTICATION (REQUIRED)
# ===========================================
# Secret key for signing JWT tokens
# Generate with: openssl rand -base64 64
JWT_SECRET=d6c3b396b36f1b9492ba28aa171cbd0adff009d57d97e06a9a7411f58ac7c7fe

# ===========================================
# REDIS (BullMQ Job Queue)
# ===========================================
# For local development (Docker): redis://localhost:6379
# For Railway: Use Railway Redis connection string
REDIS_URL=redis://localhost:6379

# ===========================================
# API
# ===========================================
API_PORT=3001
API_BASE_URL=http://localhost:3001
API_CORS_ORIGINS=*

# ===========================================
# ENCRYPTION
# ===========================================
# AES-256-GCM encryption key for sensitive credentials
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=5e4d70419fe02bbeaf21928341e621219c7469ca6d26521df9523e90ae55713a

# ===========================================
# SUPER ADMIN
# ===========================================
# Email of user to be elevated to super-admin
# Leave empty if you don't want a super-admin configured
SUPER_ADMIN_EMAIL=admin@example.com

# ===========================================
# EMAIL (Resend)
# ===========================================
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=delivered@resend.dev

# ===========================================
# FRONTEND
# ===========================================
FRONTEND_URL=http://localhost:3000
MANAGER_URL=http://localhost:3002

# ===========================================
# LOGGING
# ===========================================
# Levels: error | warn | info | debug
LOG_LEVEL=info

# Log Provider Configuration
# Options: axiom | seq | openobserve | (empty for console only)
LOG_PROVIDER=

# Axiom Configuration (recommended - 500GB/month free tier)
# Sign up at axiom.co to get started
AXIOM_TOKEN=        # API token from axiom.co/settings/tokens
AXIOM_DATASET=      # Dataset name (e.g., 'fnd-logs')

# Seq Configuration (self-hosted or seq.io)
SEQ_URL=            # Seq server URL (e.g., 'http://localhost:5341' or 'https://yourseq.io')
SEQ_API_KEY=        # Optional API key for authentication

# OpenObserve Configuration (self-hosted or cloud.openobserve.ai)
OPENOBSERVE_URL=    # OpenObserve URL (e.g., 'https://cloud.openobserve.ai')
OPENOBSERVE_ORG=    # Organization name (default: 'default')
OPENOBSERVE_USERNAME=  # Username for Basic Auth
OPENOBSERVE_PASSWORD=  # Password for Basic Auth

# ===========================================
# BOOTSTRAP MODE
# ===========================================
# Options: api | workers | hybrid
# - api: Only API endpoints (no workers)
# - workers: Only background workers (no API)
# - hybrid: Both API and workers (default for Railway)
NODE_MODE=hybrid

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable workspace management functionality
FEATURES_WORKSPACE_ENABLED=true
# Enable workspace switching
FEATURES_WORKSPACE_SWITCHING_ENABLED=true

# ===========================================
# STRIPE BILLING
# ===========================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_SUCCESS_URL=http://localhost:3000/settings/billing?success=true
STRIPE_CANCEL_URL=http://localhost:3000/settings/billing?canceled=true
